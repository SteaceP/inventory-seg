# Supabase Configuration
# Get these values from your Supabase project dashboard
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=sb_publishable_your_key
SUPABASE_SECRET_KEY=sb_secret_your_key

# VAPID Keys for Push Notifications
# Generate these with: npx web-push generate-vapid-keys
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here

# Sentry Configuration
# Get these from your Sentry project dashboard
VITE_SENTRY_DSN=https://your_sentry_key@o1234567.ingest.us.sentry.io/1234567890123456
SENTRY_WORKER_DSN=https://your_worker_sentry_key@o1234567.ingest.us.sentry.io/1234567890123456

# Cloudflare Turnstile
# Get this from your Cloudflare dashboard
# For local testing, use: 1x00000000000000000000AA
VITE_TURNSTILE_SITE_KEY=your_turnstile_site_key_here

# Sentry Auth Token (for sourcemap uploads during build)
# Generate this from Sentry: Settings -> Auth Tokens
# This should also be set in your CI/CD environment (Cloudflare Pages)
SENTRY_AUTH_TOKEN=sntrys_your_sentry_auth_token_here


# App Customization
VITE_APP_NAME="Inventory System"
VITE_COMPANY_NAME="Acme Corp"
VITE_COMPANY_URL="https://acme.org"
VITE_MAINTAINER_EMAIL="admin@acme.org"
VITE_APP_URL="https://inventory.acme.org"
VITE_WORKER_URL="https://worker.acme.org" # Use https://*.<your domain name without .com>/workers.dev

# ------------------------------------------------------------------------------
# Configuration Generation (scripts/prepare-configs.js)
# ------------------------------------------------------------------------------
# These variables control the generation of package.json and wrangler.toml
# They are NOT used by the application at runtime, only during "pnpm run dev/build"

# Package Identity
PACKAGE_NAME="my-inventory-app"
PACKAGE_AUTHOR="Your Name"
GH_USERNAME="your-github-username"
REPO_NAME="inventory-system"

# Worker Identity
WORKER_NAME="inventory-worker-production"
COMPANY_NAME="Acme Corp"
ADMIN_EMAIL="admin@acme.org"
APP_URL="https://inventory.acme.org"
ALLOWED_ORIGIN="https://inventory.acme.org" # Comma-separated origins
BREVO_SENDER_EMAIL="noreply@acme.org"

# Production Infrastructure (Cloudflare)
# Only needed if you are deploying to production
HYPERDRIVE_ID="your_hyperdrive_id"
HYPERDRIVE_LOCAL_CONNECTION_STRING="postgresql://postgres:postgres@127.0.0.1:54322/postgres"
D1_DATABASE_NAME="my-inventory-db"
D1_DATABASE_ID="your_d1_database_id"
R2_BUCKET_NAME="my-inventory-bucket"

# GitHub Actions / act
CLOUDFLARE_API_TOKEN="your_cloudflare_api_token"
CLOUDFLARE_ACCOUNT_ID="your_cloudflare_account_id"

# Additional Secrets
SUPABASE_SECRET_KEY="your_supabase_secret_key"
BREVO_API_KEY="your_brevo_api_key"

# AI Configuration
# Set to false to use local mock or avoid Cloudflare login errors
AI_REMOTE=false
