{
  "name": "seg-inventaire",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "overrides": {
    "node-domexception": "file:./.local-overrides/node-domexception"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "generate-vapid": "web-push generate-vapid-keys",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy --env production",
    "worker:tail": "wrangler tail",
    "deploy": "npm run build && npm run worker:deploy",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:gen-types": "supabase gen types typescript --local > src/types/database.types.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@sentry/cloudflare": "^10.35.0",
    "@sentry/react": "^10.35.0",
    "@sentry/vite-plugin": "^4.7.0",
    "@supabase/supabase-js": "^2.90.1",
    "@types/web-push": "^3.6.4",
    "framer-motion": "^12.27.2",
    "html5-qrcode": "^2.3.8",
    "postgres": "^3.4.8",
    "react": "^19.2.3",
    "react-barcode": "^1.6.1",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260120.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-basic-ssl": "^2.1.4",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-dom": "^2.7.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-react-x": "^2.7.2",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "supabase": "^2.72.8",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "wrangler": "^4.59.2"
  }
}
