{
  "name": "seg-inventaire",
  "description": "Advanced Inventory Management System, featuring multi-location tracking, AI-driven reordering, and appliance maintenance history.",
  "private": true,
  "version": "0.0.0",
  "license": "AGPL-3.0-only",
  "author": "Steace Paquette",
  "github": "SteaceP",
  "repository": {
    "type": "git",
    "url": "https://github.com/SteaceP/inventory-seg.git"
  },
  "homepage": "https://inv.coderage.pro",
  "bugs": {
    "url": "https://github.com/SteaceP/inventory-seg/issues"
  },
  "funding": {
    "url": "https://github.com/sponsors/SteaceP"
  },
  "keywords": [
    "inventory",
    "segmentation",
    "cloudflare",
    "worker",
    "typescript",
    "react",
    "vite",
    "supabase"
  ],
  "type": "module",
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "analyze": "ANALYZE=true vite build",
    "complete-check": "pnpm run format && pnpm run lint && pnpm run test:all && pnpm run build",
    "vitest-ui": "vitest --ui --coverage.enabled=true --coverage.provider=v8 --coverage.reporter=html --coverage.reporter=lcov",
    "deploy": "pnpm run build && wrangler deploy --env production",
    "lint": "eslint .",
    "format": "prettier --write .",
    "preview": "pnpm run build && vite preview",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:gen-types": "supabase gen types typescript --local > src/types/database.types.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:worker": "vitest --config vitest.worker.config.ts",
    "test:worker:run": "vitest run --config vitest.worker.config.ts",
    "test:coverage": "vitest run --coverage",
    "format:check": "prettier --check .",
    "test:all": "pnpm run test:run && pnpm run test:worker:run",
    "worker:tail": "wrangler tail",
    "generate-vapid": "web-push generate-vapid-keys"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
