      "vitest": "3.2.4",
      "@vitest/ui": "3.2.4",
      "@vitest/coverage-v8": "3.2.4"
    },
    "onlyBuiltDependencies": [
      "@sentry/cli",
      "@swc/core",
      "esbuild",
      "sharp",
      "unrs-resolver",
      "workerd"
    ]
  }
}
