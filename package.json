{
  "name": "seg-inventaire",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "overrides": {
    "node-domexception": "file:./.local-overrides/node-domexception"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "npm run build && vite preview",
    "generate-vapid": "web-push generate-vapid-keys",
    "worker:tail": "wrangler tail",
    "deploy": "npm run build && wrangler deploy --env production --message \"$(git log -1 --pretty=%B)\"",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:gen-types": "supabase gen types typescript --local > src/types/database.types.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:worker": "vitest --config vitest.worker.config.ts",
    "test:worker:run": "vitest run --config vitest.worker.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:run && npm run test:worker:run"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.7",
    "@mui/material": "^7.3.7",
    "@sentry/cloudflare": "^10.36.0",
    "@sentry/react": "^10.36.0",
    "@sentry/vite-plugin": "^4.7.0",
    "@supabase/supabase-js": "^2.91.1",
    "@types/web-push": "^3.6.4",
    "framer-motion": "^12.29.0",
    "html5-qrcode": "^2.3.8",
    "postgres": "^3.4.8",
    "react": "^19.2.3",
    "react-barcode": "^1.6.1",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.13.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.21.2",
    "@cloudflare/vitest-pool-workers": "^0.12.6",
    "@cloudflare/workers-types": "^4.20260124.0",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-basic-ssl": "^2.1.4",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-dom": "^2.7.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-react-x": "^2.7.2",
    "globals": "^17.1.0",
    "happy-dom": "^20.3.7",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vitest": "3.2",
    "wrangler": "^4.60.0"
  }
}
