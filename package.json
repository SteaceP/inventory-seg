    "@sentry/vite-plugin": "^4.9.0",
    "@supabase/supabase-js": "^2.94.0",
    "@types/web-push": "^3.6.4",
    "@vitest/ui": "^3.2.4",
    "@zxing/library": "^0.21.3",
    "framer-motion": "^12.31.0",
    "postgres": "^3.4.8",
    "react": "^19.2.4",
    "react-barcode": "^1.6.1",
    "react-dom": "^19.2.4",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.13.0",
    "web-push": "^3.6.7"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.23.0",
